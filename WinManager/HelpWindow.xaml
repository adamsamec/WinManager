<Window x:Class="WinManager.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WinManager"
xmlns:lang="clr-namespace:WinManager;assembly=WinManager"
        mc:Ignorable="d"
        Title="{x:Static lang:Resources.helpWindowTitle}"
SizeToContent="WidthAndHeight"
        ShowInTaskbar="False"
WindowStyle="None"
Loaded="HelpWindow_Loaded"
>
  <Grid>
    <WebBrowser Name="webBrowser"
Width="800"
Height="600"/>
    <Button Name="closeButton"
Content="{x:Static lang:Resources.closeButton}"
IsDefault="True"
IsCancel="True"
/>
  </Grid>
</Window>
